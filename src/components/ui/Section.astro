---
interface Props {
  id: string;
  title: string;
  number: string;
  classes?: string;
}

const { id, title, number, classes = '' } = Astro.props;
---

<section id={id} class={`py-24 md:py-32 ${classes}`}>
  <div class="container mx-auto px-6">
    <div class="flex items-center mb-12 gap-4 animate-fade-in">
      <h2 class="text-2xl md:text-3xl font-bold text-light-blue-grey flex items-center whitespace-nowrap">
        <span class="text-mint font-mono text-xl md:text-2xl mr-2">{number}.</span> {title}
      </h2>
      <div class="h-px bg-slate/30 flex-grow ml-4"></div>
    </div>
    
    <div>
      <slot />
    </div>
  </div>
</section>
