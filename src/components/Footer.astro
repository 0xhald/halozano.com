---
import SocialLinks from './SocialLinks.astro';
---

<footer class="py-8 bg-navy/50 border-t border-slate/10">
  <div class="container mx-auto px-6">
    <div class="flex flex-col-reverse md:flex-row justify-between items-center">
      <div class="text-center md:text-left mt-6 md:mt-0">
        <p class="text-slate text-sm">
          &copy; {new Date().getFullYear()} Hector Lozano. All Rights Reserved.
        </p>
        <p class="text-slate text-xs mt-2">
          Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-mint hover:underline">Astro</a> and <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="text-mint hover:underline">Tailwind CSS</a>
        </p>
      </div>
      
      <SocialLinks />
    </div>
  </div>
</footer>
