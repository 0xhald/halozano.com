---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { projects } from '@data/projects';
---

<Layout 
  title="Projects | Developer Portfolio" 
  description="Explore my projects and work as a software developer"
>
  <Header />
  
  <main class="pt-24">
    <section class="container mx-auto px-6 py-12 md:py-24">
      <div class="max-w-5xl mx-auto">
        <header class="mb-12 md:mb-16 text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-light-blue-grey mb-6">Projects</h1>
          <p class="text-slate text-lg max-w-2xl mx-auto">
            A collection of my recent projects, showcasing my skills and experience in software development.
          </p>
        </header>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {projects.map((project) => (
            <a 
              href={`/projects/${project.slug}`}
              class="group bg-navy border border-slate/20 rounded-lg overflow-hidden transition-transform hover:-translate-y-2 hover:shadow-xl"
            >
              <div class="h-48 overflow-hidden relative">
                <img 
                  src={project.image} 
                  alt={project.title} 
                  class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-navy/60 backdrop-blur-[1px]"></div>
              </div>
              
              <div class="p-6">
                <h2 class="text-2xl font-bold text-light-blue-grey mb-3 group-hover:text-mint transition-colors">
                  {project.title}
                </h2>
                
                <p class="text-slate mb-4 line-clamp-3">
                  {project.description}
                </p>
                
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.technologies.slice(0, 3).map((tech) => (
                    <span class="bg-charcoal px-2 py-1 rounded text-mint text-xs font-mono">
                      {tech}
                    </span>
                  ))}
                  {project.technologies.length > 3 && (
                    <span class="bg-charcoal px-2 py-1 rounded text-mint text-xs font-mono">
                      +{project.technologies.length - 3} more
                    </span>
                  )}
                </div>
                
                <div class="text-right">
                  <span class="text-mint font-mono text-sm inline-flex items-center">
                    View Details 
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
        
        <div class="mt-16 text-center">
          <a href="/#contact" class="bg-mint hover:bg-light-blue-grey text-navy hover:text-mint px-6 py-3 rounded-md font-medium transition-colors inline-flex items-center">
            <span>Let's Work Together</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>